<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1><p> <%= link_to 'New Category', new_category_path,:class => "btn btn-success btn-xs" %> </p>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Date</th>
      <th>#</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.id, category %></td>
        <td><%= category.name %></td>
        <td><%=l category.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_category_path(category),:class => "btn btn-success btn-xs" %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
