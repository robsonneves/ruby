<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">
     <h3 class="panel-title">New Photo </h3>
  </div>
  <div class="panel-body">

       <% if @photo.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@photo.errors.count, "error") %> prohibited this pessoa from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @photo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%= form_for @photo, :html => { :class => "form-group photo", :multipart => true  } do |f| %>
        <%= f.hidden_field :gallery_id, :class => 'form-control' %>
        <div class="form-group col-lg-6">
           <%= f.label :title%>
           <%= f.text_field :title, :class => 'form-control' %>
        </div>
   
         <div class="form-group col-lg-12">
           <%= f.label :Img%>
           <%= f.file_field :image %>
          
        </div>
        <div class="form-group col-lg-12">
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <% end %>  
      </form>
  
  </div>
</div>
