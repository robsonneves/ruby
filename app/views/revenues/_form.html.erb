<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading">
     <h3 class="panel-title">New Revenue</h3>
  </div>
  <div class="panel-body">

       <% if @revenue.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@revenue.errors.count, "error") %> prohibited this pessoa from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @revenue.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%= form_for @revenue, :html => { :class => "form-group revenue", :multipart => true  } do |f| %>
        <div class="form-group col-lg-6">
           <%= f.label :name %>
           <%= f.text_field :name, :class => 'form-control' %>
        </div>
         <div class="form-group col-lg-6">
           <%= f.label :Category %>
           <%= f.collection_select(:category_id, Category.all, :id, :name, {promt: true}, :class => 'form-control') %>
        </div>
         <div class="form-group col-lg-12">
           <%= f.label :Description %>
           <%= f.text_area(:description, cols: 65, rows: 3,:class =>"form-control" )%>
        </div>
         <div class="form-group col-lg-12">
           <%= f.label :Cover%>
           <%= f.file_field :cover %>
          
        </div>
        <div class="form-group col-lg-12">
          <%= f.submit nil, :class => 'btn btn-primary' %>
        </div>
        <% end %>  
      </form>
  
  </div>
</div>






