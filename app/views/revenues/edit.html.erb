<h1>Editing Revenue</h1>
<%= render 'form' %>


<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">Ingredients</h3>
    </div>
    <div class="panel-body">
    <%= link_to 'Add ingredient', controller:"ingredients",action:"new",id:@revenue%>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
        <% @revenue.ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.name %></td>
          <td>
              <%= link_to 'Edit', edit_ingredient_path(ingredient) %>
              <%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title">Galery</h3>
  </div>
  <div class="panel-body">
  <%= link_to 'Add gallery', controller:"galleries",action:"new",id:@revenue%>
       <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Photos</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
        <% @revenue.galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.title %></td>
          <td><%= link_to 'Photos', controller:"photos",action:"new",id:gallery%></td>
          <td>
              <%= link_to 'Edit', edit_gallery_path(gallery) %>
              <%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'BACK', revenues_path,:class => "btn btn-danger btn-sm" %>

